{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "overrides": {
    "sitemap.xml": {
      "contentType": "application/xml"
    },
    "robots.txt": {
      "contentType": "text/plain"
    }
  }
}
